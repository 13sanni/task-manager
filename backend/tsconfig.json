{
  "compilerOptions": {
    // File Layout
    "rootDir": ".",
    "outDir": "./dist",
    "allowImportingTsExtensions": true,
    "rewriteRelativeImportExtensions": true,

    // Environment Settings
    "module": "esnext", // This is good for using import/export
    "target": "es2023", // Modern JavaScript target is fine
    "esModuleInterop": true, // Add this line to enable ES module interop
    "types": ["node"],
    "ignoreDeprecations": "6.0",

    // Other Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Stricter Typechecking Options
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Recommended Options
    "strict": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax":false,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true
  },
    "exclude": [
    "node_modules",
    "dist",
    "prisma",
    "prisma.config.ts"
  ]

}
